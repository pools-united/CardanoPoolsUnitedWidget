<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".view.MainActivity">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.05"
        android:adjustViewBounds="true"
        android:src="@drawable/pool_logo"/>

    <com.royrodriguez.transitionbutton.TransitionButton
        android:id="@+id/pool_5"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Cardano pools united"
        android:textAllCaps="false"
        app:defaultColor="@color/colorPrimary"
        app:loaderColor="@color/colorPrimary"
        android:textColor="@android:color/white" />


    <com.royrodriguez.transitionbutton.TransitionButton
        android:id="@+id/pool_1"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/pool_5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Venus Pool"
        android:textAllCaps="false"
        app:defaultColor="@color/colorPrimary"
        app:loaderColor="@color/colorPrimary"
        android:textColor="@android:color/white" />

    <com.royrodriguez.transitionbutton.TransitionButton
        android:id="@+id/pool_2"
        app:layout_constraintTop_toBottomOf="@+id/pool_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintVertical_bias="0"
        android:textAllCaps="false"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Adastra Mines"
        app:defaultColor="@color/colorPrimary"
        app:loaderColor="@color/colorPrimary"
        android:textColor="@android:color/white" />


    <com.royrodriguez.transitionbutton.TransitionButton
        android:id="@+id/pool_3"
        app:layout_constraintTop_toBottomOf="@+id/pool_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="ERA Pool"
        android:textAllCaps="false"
        app:defaultColor="@color/colorPrimary"
        app:loaderColor="@color/colorPrimary"
        android:textColor="@android:color/white" />

    <com.royrodriguez.transitionbutton.TransitionButton
        android:id="@+id/pool_4"
        app:layout_constraintTop_toBottomOf="@+id/pool_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Utterly Determined Pool"
        android:textAllCaps="false"
        app:defaultColor="@color/colorPrimary"
        app:loaderColor="@color/colorPrimary"
        android:textColor="@android:color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>