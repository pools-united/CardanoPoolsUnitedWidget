<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/alpha_bg_color"
    android:id="@+id/root_view"
    android:padding="5dp">

    <TextView
        android:id="@+id/widgetHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:text="CPU widget"
        android:contentDescription="@string/appwidget_text"
        android:textColor="#d9e3e3"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_below="@id/widgetHeader"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/btn"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_top"
            android:padding="10dp">

            <TextView
                android:id="@+id/bnt_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="click to refresh"
                android:textColor="@color/white" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/component_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_top"
            android:layout_below="@id/btn"
            android:layout_marginTop="10dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/component_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Blocks Produced"
                android:textColor="@color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/component_value"
            android:background="@drawable/rounded_corners_bottom"
            android:layout_below="@+id/component_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/component_value_txt"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>



    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_marginBottom="4dp"
        android:layout_below="@id/rl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/component_name2"
            android:background="@drawable/rounded_corners_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/component_name_txt2"
                android:textColor="@color/white"
                android:text="Epoch blocks made"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/component_value2"
            android:background="@drawable/rounded_corners_bottom"
            android:layout_below="@+id/component_name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/component_value_txt2"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>



    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_3"
        android:layout_below="@id/rl2"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/component_name3"
            android:background="@drawable/rounded_corners_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/component_name_txt3"
                android:textColor="@color/white"
                android:text="Pledge"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/component_value3"
            android:background="@drawable/rounded_corners_bottom"
            android:layout_below="@+id/component_name3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/component_value_txt3"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_4"
        android:layout_marginBottom="4dp"
        android:layout_below="@id/rl_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/component_name4"
            android:background="@drawable/rounded_corners_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/component_name_txt4"
                android:textColor="@color/white"
                android:text="Total Stake"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/component_value4"
            android:background="@drawable/rounded_corners_bottom"
            android:layout_below="@+id/component_name4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/component_value_txt4"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@id/rl_4"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/component_name5"
            android:background="@drawable/rounded_corners_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/component_name_txt5"
                android:textColor="@color/white"
                android:text="Margin fee"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/component_value5"
            android:background="@drawable/rounded_corners_bottom"
            android:layout_below="@+id/component_name5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/component_value_txt5"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>